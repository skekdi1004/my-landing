/* ===== Reset & Base Styles ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Dark Theme Colors */
    --primary-color: #00ff88;
    --secondary-color: #00d9ff;
    --accent-color: #ff0080;
    --bg-dark: #1a1a2e;
    --bg-darker: #16213e;
    --bg-card: rgba(26, 26, 46, 0.7);
    --bg-glass: rgba(255, 255, 255, 0.08);
    --text-primary: #ffffff;
    --text-secondary: #a0a0b0;
    --text-muted: #606070;
    --border-color: rgba(255, 255, 255, 0.1);
    --glow-primary: 0 0 20px rgba(0, 255, 136, 0.5);
    --glow-secondary: 0 0 20px rgba(0, 217, 255, 0.5);
    --shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 20px 60px rgba(0, 0, 0, 0.6);
}

body {
    font-family: 'Noto Sans KR', -apple-system, BlinkMacSystemFont, sans-serif;
    line-height: 1.6;
    color: var(--text-primary);
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    overflow-x: hidden;
    position: relative;
}

/* Animated Background Gradient */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(0, 255, 136, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(0, 217, 255, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(255, 0, 128, 0.08) 0%, transparent 50%);
    z-index: -1;
    animation: bgShift 20s ease infinite;
}

@keyframes bgShift {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.1); }
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* ===== Navigation ===== */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(26, 26, 46, 0.7);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--border-color);
    z-index: 1000;
    transition: all 0.3s ease;
}

.navbar.scrolled {
    background: rgba(26, 26, 46, 0.9);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.2rem 20px;
}

.nav-brand h1 {
    font-size: 2rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: var(--glow-primary);
    letter-spacing: 2px;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
}

.nav-menu a {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    position: relative;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    transition: width 0.3s ease;
}

.nav-menu a:hover {
    color: var(--text-primary);
}

.nav-menu a:hover::after {
    width: 100%;
}

.hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
}

.hamburger span {
    width: 25px;
    height: 2px;
    background: var(--primary-color);
    border-radius: 3px;
    transition: all 0.3s ease;
}

/* ===== Hero Section ===== */
.hero-section {
    position: relative;
    height: 100vh;
    min-height: 700px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
}

.spline-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    opacity: 0.6;
}

.hero-overlay {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.hero-content {
    text-align: center;
    max-width: 900px;
    padding: 2rem;
    animation: fadeInUp 1s ease;
}

.hero-title {
    font-size: 5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
    letter-spacing: -2px;
    text-shadow: var(--glow-primary);
}

.hero-subtitle {
    font-size: 1.4rem;
    margin-bottom: 2.5rem;
    color: var(--text-secondary);
    font-weight: 300;
    letter-spacing: 0.5px;
}

.hero-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
}

.tag {
    background: var(--bg-glass);
    backdrop-filter: blur(10px);
    padding: 0.7rem 1.8rem;
    border-radius: 30px;
    font-weight: 500;
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    font-size: 0.9rem;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.tag:hover {
    background: var(--bg-card);
    border-color: var(--primary-color);
    transform: translateY(-3px);
    box-shadow: var(--glow-primary);
}

/* ===== Buttons ===== */
.btn-primary {
    display: inline-block;
    padding: 1.2rem 3rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: var(--bg-dark);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 700;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    box-shadow: var(--glow-primary);
    position: relative;
    overflow: hidden;
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
}

.btn-primary:hover::before {
    left: 100%;
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 40px rgba(0, 255, 136, 0.6);
}

/* ===== Section Styles ===== */
section {
    padding: 6rem 0;
    position: relative;
}

.section-title {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -1px;
}

.section-subtitle {
    text-align: center;
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-bottom: 4rem;
    font-weight: 300;
}

/* ===== Profile Section ===== */
.profile-section {
    background: rgba(22, 33, 62, 0.5);
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
}

.profile-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    align-items: start;
}

.profile-image {
    position: sticky;
    top: 120px;
}

.profile-image img {
    width: 100%;
    border-radius: 20px;
    border: 2px solid var(--border-color);
    box-shadow: var(--shadow-lg);
    transition: all 0.3s ease;
}

.profile-image img:hover {
    transform: scale(1.02);
    border-color: var(--primary-color);
    box-shadow: 0 20px 60px rgba(0, 255, 136, 0.3);
}

.profile-info h3 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
}

.profile-subtitle {
    color: var(--primary-color);
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    font-weight: 500;
}

.profile-details {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
    margin-bottom: 2rem;
    transition: all 0.3s ease;
}

.profile-details:hover {
    border-color: var(--primary-color);
    box-shadow: var(--glow-primary);
}

.detail-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
}

.detail-item:last-child {
    border-bottom: none;
}

.detail-item i {
    color: var(--primary-color);
    font-size: 1.3rem;
    width: 30px;
}

.profile-experience,
.profile-certifications,
.profile-specialties {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
    margin-bottom: 2rem;
    transition: all 0.3s ease;
}

.profile-experience:hover,
.profile-certifications:hover,
.profile-specialties:hover {
    border-color: var(--primary-color);
    transform: translateY(-3px);
    box-shadow: var(--glow-primary);
}

.profile-experience h4,
.profile-certifications h4,
.profile-specialties h4 {
    font-size: 1.4rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
}

.profile-experience h4 i,
.profile-certifications h4 i,
.profile-specialties h4 i {
    color: var(--primary-color);
    margin-right: 0.5rem;
}

.experience-item {
    padding: 1.5rem;
    background: var(--bg-glass);
    border-radius: 15px;
    border-left: 4px solid var(--primary-color);
}

.experience-item strong {
    font-size: 1.2rem;
    color: var(--text-primary);
    display: block;
    margin-bottom: 0.5rem;
}

.period {
    color: var(--text-secondary);
    font-size: 0.9rem;
    display: block;
    margin-bottom: 0.7rem;
}

.cert-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.cert-badge {
    background: var(--bg-glass);
    padding: 0.7rem 1.3rem;
    border-radius: 30px;
    font-size: 0.9rem;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.cert-badge:hover {
    border-color: var(--primary-color);
    transform: translateY(-3px);
    box-shadow: var(--glow-primary);
}

.cert-badge i {
    color: var(--primary-color);
    margin-right: 0.5rem;
}

.specialty-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.specialty-tag {
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.2), rgba(0, 217, 255, 0.2));
    border: 1px solid var(--primary-color);
    color: var(--text-primary);
    padding: 0.8rem 1.5rem;
    border-radius: 30px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
}

.specialty-tag:hover {
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.3), rgba(0, 217, 255, 0.3));
    transform: translateY(-3px);
    box-shadow: var(--glow-primary);
}

/* ===== References Section ===== */
.references-section {
    background: rgba(15, 52, 96, 0.3);
}

.references-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
}

.reference-card {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.reference-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
}

.reference-card:hover {
    transform: translateY(-10px);
    border-color: var(--primary-color);
    box-shadow: var(--glow-primary);
}

.reference-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1.5rem;
}

.reference-header h3 {
    font-size: 1.4rem;
    color: var(--text-primary);
    flex: 1;
}

.reference-category {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: var(--bg-dark);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.reference-org {
    color: var(--primary-color);
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 0.7rem;
}

.reference-period {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1.2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.reference-period i {
    color: var(--secondary-color);
}

.reference-desc {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
}

.reference-participants {
    background: var(--bg-glass);
    padding: 0.7rem 1.2rem;
    border-radius: 15px;
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    font-weight: 600;
    border: 1px solid var(--border-color);
}

.reference-participants i {
    color: var(--primary-color);
}

/* ===== Reviews Section ===== */
.reviews-section {
    background: rgba(22, 33, 62, 0.5);
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
}

.reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

.review-card {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.review-card:hover {
    transform: translateY(-5px);
    border-color: var(--secondary-color);
    box-shadow: var(--glow-secondary);
}

.review-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1.5rem;
}

.review-author h4 {
    font-size: 1.3rem;
    color: var(--text-primary);
    margin-bottom: 0.4rem;
}

.review-company {
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.review-rating {
    display: flex;
    gap: 0.3rem;
}

.review-rating i {
    color: var(--primary-color);
    font-size: 1.1rem;
    filter: drop-shadow(0 0 5px rgba(0, 255, 136, 0.5));
}

.review-course {
    background: var(--bg-glass);
    padding: 0.6rem 1.2rem;
    border-radius: 15px;
    font-size: 0.9rem;
    margin-bottom: 1.2rem;
    color: var(--secondary-color);
    font-weight: 500;
    border: 1px solid var(--border-color);
}

.review-content {
    color: var(--text-secondary);
    line-height: 1.8;
    font-style: italic;
}

/* ===== Review Form ===== */
.review-form-container {
    max-width: 700px;
    margin: 0 auto;
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 3rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
}

.review-form-container h3 {
    font-size: 2rem;
    margin-bottom: 2.5rem;
    text-align: center;
    color: var(--text-primary);
}

/* ===== Contact Section ===== */
.contact-section {
    background: rgba(15, 52, 96, 0.3);
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
}

.contact-info {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
    height: fit-content;
}

.contact-info h3 {
    font-size: 1.6rem;
    margin-bottom: 2rem;
    color: var(--text-primary);
}

.info-item {
    display: flex;
    gap: 1.2rem;
    padding: 1.2rem 0;
    border-bottom: 1px solid var(--border-color);
}

.info-item:last-child {
    border-bottom: none;
}

.info-item i {
    color: var(--primary-color);
    font-size: 1.6rem;
    width: 35px;
}

.info-item strong {
    display: block;
    margin-bottom: 0.4rem;
    color: var(--text-primary);
}

.info-item p {
    color: var(--text-secondary);
    margin: 0;
}

.contact-form {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    padding: 3rem;
    border-radius: 20px;
    border: 1px solid var(--border-color);
}

/* ===== Form Styles ===== */
.form-group {
    margin-bottom: 1.8rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.7rem;
    font-weight: 600;
    color: var(--text-primary);
    font-size: 0.95rem;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 1rem 1.3rem;
    background: var(--bg-glass);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    font-family: 'Noto Sans KR', sans-serif;
    font-size: 1rem;
    color: var(--text-primary);
    transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    background: rgba(0, 255, 136, 0.05);
    box-shadow: var(--glow-primary);
}

.form-group textarea {
    resize: vertical;
    min-height: 140px;
}

.rating-input {
    display: flex;
    gap: 0.7rem;
    font-size: 2.2rem;
}

.rating-input i {
    cursor: pointer;
    color: var(--border-color);
    transition: all 0.2s ease;
}

.rating-input i:hover,
.rating-input i.active {
    color: var(--primary-color);
    transform: scale(1.2);
    filter: drop-shadow(0 0 10px rgba(0, 255, 136, 0.8));
}

/* ===== Footer ===== */
.footer {
    background: rgba(22, 33, 62, 0.8);
    border-top: 1px solid var(--border-color);
    color: var(--text-primary);
    padding: 4rem 0 2rem;
}

.footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 3rem;
}

.footer-brand h3 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.footer-brand p {
    color: var(--text-secondary);
}

.footer-links h4,
.footer-contact h4 {
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
    color: var(--text-primary);
}

.footer-links ul {
    list-style: none;
}

.footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    display: block;
    padding: 0.5rem 0;
    transition: all 0.3s ease;
}

.footer-links a:hover {
    color: var(--primary-color);
    padding-left: 5px;
}

.footer-contact p {
    color: var(--text-secondary);
    margin-bottom: 0.8rem;
}

.footer-contact i {
    margin-right: 0.7rem;
    color: var(--primary-color);
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
    color: var(--text-secondary);
}

/* ===== Toast Notification ===== */
.toast {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    padding: 1.2rem 2.5rem;
    border-radius: 15px;
    box-shadow: var(--shadow-lg);
    transform: translateY(200%);
    transition: transform 0.3s ease;
    z-index: 2000;
}

.toast.show {
    transform: translateY(0);
}

.toast.success {
    border-color: var(--primary-color);
    box-shadow: var(--glow-primary);
}

.toast.error {
    border-color: var(--accent-color);
    box-shadow: 0 0 20px rgba(255, 0, 128, 0.5);
}

/* ===== Loading State ===== */
.loading {
    text-align: center;
    padding: 4rem;
    color: var(--text-secondary);
    font-size: 1.1rem;
}

/* ===== Animations ===== */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(40px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===== Responsive Design ===== */
@media (max-width: 1024px) {
    .profile-content {
        grid-template-columns: 1fr;
    }
    
    .profile-image {
        position: static;
        max-width: 450px;
        margin: 0 auto;
    }
    
    .contact-content {
        grid-template-columns: 1fr;
    }
    
    .footer-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
}

@media (max-width: 768px) {
    .nav-menu {
        position: fixed;
        left: -100%;
        top: 80px;
        flex-direction: column;
        background: rgba(26, 26, 46, 0.98);
        backdrop-filter: blur(20px);
        width: 100%;
        text-align: center;
        transition: 0.3s;
        border-top: 1px solid var(--border-color);
        padding: 2rem 0;
        gap: 1.5rem;
    }
    
    .nav-menu.active {
        left: 0;
    }
    
    .hamburger {
        display: flex;
    }
    
    .hero-title {
        font-size: 3rem;
    }
    
    .hero-subtitle {
        font-size: 1.1rem;
    }
    
    .section-title {
        font-size: 2.2rem;
    }
    
    .references-grid,
    .reviews-grid {
        grid-template-columns: 1fr;
    }
    
    .toast {
        right: 1rem;
        left: 1rem;
        bottom: 1rem;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 2.2rem;
    }
    
    .hero-subtitle {
        font-size: 1rem;
    }
    
    .hero-tags {
        gap: 0.7rem;
    }
    
    .tag {
        padding: 0.5rem 1.2rem;
        font-size: 0.85rem;
    }
    
    section {
        padding: 4rem 0;
    }
    
    .contact-form,
    .review-form-container {
        padding: 2rem;
    }
    
    .btn-primary {
        padding: 1rem 2rem;
        font-size: 0.9rem;
    }
}

/* ===== Scrollbar Styling ===== */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: rgba(22, 33, 62, 0.8);
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, var(--primary-color), var(--secondary-color));
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, var(--secondary-color), var(--primary-color));
}